<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecipeDetailActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >
        <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:srcCompat="@drawable/ic_add_camera"
                android:id="@+id/imageView_recipeDetail"
                android:padding="6dp"
                android:layout_gravity="center_horizontal"/>

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="2">

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Name"
                        android:textColor="@color/colorBlack"
                />
                <TextView
                        android:id="@+id/textView_nameDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Recipe Name"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                />
            </TableRow>
            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Type"
                        android:textColor="@color/colorBlack"
                />
                <TextView
                        android:id="@+id/textView_typeDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Type"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                />
            </TableRow>
            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Ingredients"
                        android:textColor="@color/colorBlack"
                />
                <TextView
                        android:id="@+id/textView_ingredientDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Ingredients"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                />
            </TableRow>
            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Steps"
                        android:textColor="@color/colorBlack"
                />
                <TextView
                        android:id="@+id/textView_stepDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Steps..."
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                />
            </TableRow>
            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Date Added"
                        android:textColor="@color/colorBlack"
                />
                <TextView
                        android:id="@+id/textView_dateAddedDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="date added"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                />
            </TableRow>

            <TableRow>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Date Updated"
                        android:textColor="@color/colorBlack"
                />
                <TextView
                        android:id="@+id/textView_dateUpdatedDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="date updated"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"
                />
            </TableRow>


        </TableLayout>
    </LinearLayout>
</ScrollView>